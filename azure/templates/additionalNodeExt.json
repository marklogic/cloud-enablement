{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "9.0-3",
  "parameters": {
    "additionalNodeExtSetting": {
      "type": "object"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('additionalNodeExtSetting').vmName,'-',copyIndex(1),'/extone')]",
      "apiVersion": "[parameters('additionalNodeExtSetting').apiVersion]",
      "location": "[parameters('additionalNodeExtSetting').location]",
      "copy": {
        "name": "additionalNodeExtLoop",
        "count": "[parameters('additionalNodeExtSetting').additionalNodeExtCount]"
      },
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
              "[parameters('additionalNodeExtSetting').additionalNodeScriptUrl]"
          ]
        },
        "protectedSettings": {
          "commandToExecute": "[parameters('additionalNodeExtSetting').additionalNodeCmd]"
        }
      }
    }
  ]
}