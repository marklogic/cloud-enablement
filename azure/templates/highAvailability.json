{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "9.0-3",
  "parameters": {
    "haExtSetting": {
      "type": "object"
    }
  },
  "variables": {
      "vmName": "[concat(parameters('haExtSetting').vmName,'-0')]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vmName'),'/haExt')]",
      "apiVersion": "[parameters('haExtSetting').apiVersion]",
      "location": "[parameters('haExtSetting').location]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
              "[parameters('haExtSetting').haExtScriptUrl]",
              "[parameters('haExtSetting').haExtXqyUrl]"
          ]
        },
        "protectedSettings": {
            "commandToExecute": "[parameters('haExtSetting').cmd]"
        }
      }
    }
  ]
}