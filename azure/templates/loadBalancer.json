                "[concat('Microsoft.Network/publicIPAddresses/', variables('ipv4Name'))]"
            ],
            "properties": {
                "frontendIPConfigurations": "[if(equals(parameters('lbSetting').type,'internal'),variables('internalLbProperty'),variables('externalLbProperty'))]",
                "backendAddressPools": [
