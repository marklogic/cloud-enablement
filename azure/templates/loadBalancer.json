                    {
                        "name": "[variables('lbBackendPoolIpv6Name')]"
                    }
                ],
                "loadBalancingRules": "[if(equals(parameters('lbSetting').type,'internal'),variables('internalLBRule'),variables('externalLbRule'))]",
                "probes": [
