{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "9.0-3",
  "parameters": {
    "extSetting": {
      "type": "object"
    }
  },
  "variables": {
      "bootstrapNodeExt": "[concat(parameters('extSetting').vmName,'-0/node-config')]",
      "bootstrapNodeDns": "[concat(parameters('extSetting').dnsPrefix,'0.',parameters('extSetting').location,'.cloudapp.azure.com')]",
      "cmd": "[concat(parameters('extSetting').cmdPrefix,' ',variables('bootstrapNodeDns'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[variables('bootstrapNodeExt')]",
      "apiVersion": "[parameters('extSetting').apiVersion]",
      "location": "[parameters('extSetting').location]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
              "[parameters('extSetting').bootstrapNodeScriptUrl]",
              "[parameters('extSetting').initScriptUrl]"
          ]
        },
        "protectedSettings": {
          "commandToExecute": "[variables('cmd')]"
        }
      }
    }
  ]
}