{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "9.0-3",
  "parameters": {
    "bootstrapNodeExtSetting": {
      "type": "object"
    }
  },
  "variables": {
      "bootstrapNodeExt": "[concat(parameters('bootstrapNodeExtSetting').vmName,'-0/extone')]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[variables('bootstrapNodeExt')]",
      "apiVersion": "[parameters('bootstrapNodeExtSetting').apiVersion]",
      "location": "[parameters('bootstrapNodeExtSetting').location]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
              "[parameters('bootstrapNodeExtSetting').bootstrapNodeScriptUrl]"
          ]
        },
        "protectedSettings": {
          "commandToExecute": "[parameters('bootstrapNodeExtSetting').bootstrapNodeCmd]"
        }
      }
    }
  ]
}