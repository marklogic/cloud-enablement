{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "9.0-3",
    "parameters": {
        "networkInterfaceSetting": {
            "type": "object"
        }
    },
    "variables": {
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks',parameters('networkInterfaceSetting').vnetName)]",
        "subnetId": "[concat(variables('vnetId'),'/subnets/',parameters('networkInterfaceSetting').subnetName)]",
        "lbId": "[resourceId('Microsoft.Network/loadBalancers',parameters('networkInterfaceSetting').lbName)]",
        "lbBackendPoolIpv4Id": "[concat(variables('lbId'),'/backendAddressPools/',parameters('networkInterfaceSetting').lbBackendPoolIpv4Name)]",
        "lbBackendPoolIpv6Id": "[concat(variables('lbId'),'/backendAddressPools/',parameters('networkInterfaceSetting').lbBackendPoolIpv6Name)]"
    },
    "resources": [
        {
            "name": "[concat(parameters('networkInterfaceSetting').name,'-',copyIndex())]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "[parameters('networkInterfaceSetting').apiVersion]",
            "location": "[parameters('networkInterfaceSetting').location]",
            "copy": {
                "name": "networkInterfaceLoop",
                "count": "[parameters('networkInterfaceSetting').count]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfigv4",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetId')]"
                            },
                            "primary": true,
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses',concat(parameters('networkInterfaceSetting').nodePublicIpName,'v4-node',copyIndex()))]"
                            },
                            "loadBalancerBackendAddressPools": [
                              {
                                "id": "[variables('lbBackendPoolIpv4Id')]"
                              }
                            ]
                        }
                    },
                    {
                        "name": "ipv6IPConfig",
                        "properties": {
                            "privateIPAddressVersion": "IPv6",
                            "privateIPAllocationMethod": "Dynamic",
                            "loadBalancerBackendAddressPools": [
                                {
                                    "id": "[variables('lbBackendPoolIpv6Id')]"
                                }
                            ]
                    }
          }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups',parameters('networkInterfaceSetting').nsgName)]"
                }
            }
        }
    ]
}